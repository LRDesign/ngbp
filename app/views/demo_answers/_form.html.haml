= form_for @demo_answer do |f|
  - if @demo_answer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@demo_answer.errors.count, "error")} prohibited this demo_answer from being saved:"
      %ul
        - @demo_answer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :text
    = f.text_field :text
  .field
    = f.label :position
    = f.number_field :position
  .field
    = f.label :demo_question_id
    = f.number_field :demo_question_id
  .field
    = f.label :created_at
    = f.datetime_select :created_at
  .field
    = f.label :updated_at
    = f.datetime_select :updated_at
  .actions
    = f.submit 'Save'
