= form_for @hit do |f|
  - if @hit.errors.any?
    #error_explanation
      %h2= "#{pluralize(@hit.errors.count, "error")} prohibited this hit from being saved:"
      %ul
        - @hit.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :ip
    = f.text_field :ip
  .field
    = f.label :request
    = f.text_area :request
  .field
    = f.label :params
    = f.text_area :params
  .field
    = f.label :created_at
    = f.datetime_select :created_at
  .field
    = f.label :updated_at
    = f.datetime_select :updated_at
  .actions
    = f.submit 'Save'
