= form_for @screener_question do |f|
  - if @screener_question.errors.any?
    #error_explanation
      %h2= "#{pluralize(@screener_question.errors.count, "error")} prohibited this screener_question from being saved:"
      %ul
        - @screener_question.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :text
    = f.text_area :text
  .field
    = f.label :options
    = f.text_area :options
  .field
    = f.label :study_id
    = f.number_field :study_id
  .field
    = f.label :created_at
    = f.datetime_select :created_at
  .field
    = f.label :updated_at
    = f.datetime_select :updated_at
  .field
    = f.label :answer_type
    = f.number_field :answer_type
  .actions
    = f.submit 'Save'
