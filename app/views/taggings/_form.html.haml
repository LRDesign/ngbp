= form_for @tagging do |f|
  - if @tagging.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tagging.errors.count, "error")} prohibited this tagging from being saved:"
      %ul
        - @tagging.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :tag_id
    = f.number_field :tag_id
  .field
    = f.label :taggable_id
    = f.number_field :taggable_id
  .field
    = f.label :taggable_type
    = f.text_field :taggable_type
  .field
    = f.label :tagger_id
    = f.number_field :tagger_id
  .field
    = f.label :tagger_type
    = f.text_field :tagger_type
  .field
    = f.label :context
    = f.text_field :context
  .field
    = f.label :created_at
    = f.datetime_select :created_at
  .actions
    = f.submit 'Save'
