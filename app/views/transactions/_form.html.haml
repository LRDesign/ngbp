= form_for @transaction do |f|
  - if @transaction.errors.any?
    #error_explanation
      %h2= "#{pluralize(@transaction.errors.count, "error")} prohibited this transaction from being saved:"
      %ul
        - @transaction.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :what_id
    = f.number_field :what_id
  .field
    = f.label :what_type
    = f.text_field :what_type
  .field
    = f.label :amount
    = f.number_field :amount
  .field
    = f.label :note
    = f.text_area :note
  .field
    = f.label :created_at
    = f.datetime_select :created_at
  .field
    = f.label :updated_at
    = f.datetime_select :updated_at
  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :payment_method
    = f.text_field :payment_method
  .field
    = f.label :reference
    = f.text_field :reference
  .field
    = f.label :authorization
    = f.text_field :authorization
  .field
    = f.label :study_id
    = f.number_field :study_id
  .field
    = f.label :category
    = f.number_field :category
  .actions
    = f.submit 'Save'
