= form_for @tutorial do |f|
  - if @tutorial.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tutorial.errors.count, "error")} prohibited this tutorial from being saved:"
      %ul
        - @tutorial.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :user_type
    = f.text_field :user_type
  .field
    = f.label :created_at
    = f.datetime_select :created_at
  .field
    = f.label :updated_at
    = f.datetime_select :updated_at
  .actions
    = f.submit 'Save'
